datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  notes       Note[]
  updatedAt   DateTime @updatedAt
}

model Note {
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  title      String?
  updatedAt  DateTime  @updatedAt
}
